const Database = require('better-sqlite3');
const db = new Database('comandes.db');

// Crear la taula si no existeix
db.exec(`
  CREATE TABLE IF NOT EXISTS comandes (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  nom TEXT,
  telefon TEXT,
  adreca TEXT,
  observacions TEXT,
  enviament TEXT,
  productes TEXT,
  data TEXT
);

`);

db.exec(`
  CREATE TABLE IF NOT EXISTS productes (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nom TEXT,
    descripcio TEXT,
    preu TEXT,
    imatge TEXT
  );
`);


module.exports = db;
