"use client";

import { useEffect, useState } from "react";
import { useParams } from "next/navigation";
import Navbar from "../../../components/Navbar";

export default function Producte() {
  const [producte, setProducte] = useState(null);
  const params = useParams();

  useEffect(() => {
    const carregar = async () => {
      const res = await fetch("/api/productes");
      const dades = await res.json();
      const trobat = dades.find((p) => p.id == params.id);
      setProducte(trobat);
    };
    carregar();
  }, [params.id]);

  const afegirAlCarret = () => {
    const anterior = JSON.parse(localStorage.getItem("carret")) || [];
    localStorage.setItem("carret", JSON.stringify([...anterior, producte]));
    alert("Producte afegit al carret! ✅");
  };

  if (!producte) return <div className="p-8 text-center">Carregant...</div>;

  return (
    <div>
      <Navbar />

      <main className="min-h-screen bg-white py-16 px-6 md:px-20">
        <div className="max-w-4xl mx-auto grid md:grid-cols-2 gap-12 items-center">
          {/* Imatge del producte */}
          <img
            src={producte.imatge}
            alt={producte.nom}
            className="w-full h-[400px] object-cover rounded-xl shadow"
          />

          {/* Dades del producte */}
          <div className="text-center md:text-left">
            <h1 className="text-3xl font-bold text-blue-800 mb-2">{producte.nom}</h1>
            <p className="text-gray-600 mb-4">{producte.descripcio}</p>
            <p className="text-2xl font-semibold text-green-600 mb-6">{producte.preu} €</p>

            <button
              onClick={afegirAlCarret}
              className="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full transition"
            >
              Afegir al carret
            </button>
          </div>
        </div>
      </main>
    </div>
  );
}
